<script>
    document.addEventListener("DOMContentLoaded", () => {
        const cards = document.querySelectorAll(".card");
        
        function updateGradient(){
            let flip = -1;
            cards.forEach(card => {
                const rect = card.getBoundingClientRect();
                const screenWidth = window.innerWidth;
                const positionRatio = rect.left / screenWidth;
                const gradientStart = Math.round(255 * positionRatio);
                const gradientEnd = Math.round(255 * (1 - positionRatio));
                card.style.background = `linear-gradient(135deg, rgb(${gradientStart}, 17, 203), rgb(37, 117, ${gradientEnd}))`;
                flip *= -1;
            })
        }
        window.addEventListener("resize", updateGradient);
        updateGradient();
    });
</script>


